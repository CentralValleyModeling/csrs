{% extends "templates/forms/_editable_attr.jinja" %}
{% block editable %}
<div class="form-check form-switch m-0 mt-1">
    <input 
        type="checkbox" 
        class="form-check-input {{toggle_tag}}" 
        id="{{id}}" 
        name="{{name}}" 
        role="switch"
        required
        disabled
        {{default}}
    >
</div>
{% endblock %}