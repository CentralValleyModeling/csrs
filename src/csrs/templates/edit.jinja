{% extends "base.jinja" %}
{% import 'macros.jinja' as macro%}

{% block title %}
{{page_title}}
{% endblock %}

{% block content %}
<!-- {{page_title}} -->
<h1>{{page_title}}</h1>
<p>{{page_description}}</p>
<!-- Existing Objects -->
<div id="existing-objects">
  {% for obj in objects %}
  <!-- Card for {{obj.title}} -->
  {{macro.editable_object(obj, request)}}
  {% endfor %}
</div>
<!-- New Object -->
{{macro.new_object(new_object_template, request)}}
{% endblock %}

{% block scripts %}
{{ super() }}
{{macro.scriptToggleForm()}}
{{macro.scriptSubmitForm()}}
{% endblock %}