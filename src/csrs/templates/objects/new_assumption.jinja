{% extends 'objects/_new.jinja' %}

{% block title %}{{title}}{% endblock %}
{% block card %}
    <!-- Attributes  -->
    <ul id="list-{{id}}" class="list-group list-group-flush">    
        <!-- Name -->
        <li class="list-group-item">
            <div class="input-group input-group-sm m-0 p-0">
                {{name|safe}}
            </div>
            <div class="input-group input-group-sm my-1 p-0">
                {{kind|safe}}
            </div>
            <div class="input-group input-group-sm my-1 pb-1">
                {{detail|safe}}
            </div>
        </li>
    </ul>
{% endblock %}